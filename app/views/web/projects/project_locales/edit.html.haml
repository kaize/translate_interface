.page-header
  - if can? :project_locales
    = link_to project_project_locales_path, :class => 'btn' do
      %i.icon-list-alt
      = t('simple_form.back')
  - if can? :project_locale, @project_locale
    = link_to [@project_locale.project, @project_locale], :class => 'btn btn-primary' do
      %i.icon-info-sign.icon-white
      = t('simple_form.show')
  %h1= t('simple_form.project.edit')

= render 'form'
