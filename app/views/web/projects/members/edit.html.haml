.page-header
  - if can? :project_members
    = link_to project_members_path, :class => 'btn' do
      %i.icon-list-alt
      = t('simple_form.back')
  - if can? :member, @member
    = link_to [@member.project, @member], :class => 'btn btn-primary' do
      %i.icon-info-sign.icon-white
      = t('simple_form.show')
  %h1= t('simple_form.project.edit')

= render 'form'
