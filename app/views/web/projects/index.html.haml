.page-header
  - if can? :new_project
    = link_to new_project_path, :class => 'btn btn-primary' do
      %i.icon-plus.icon-white
      New Project
  %h1 Listing projects

= paginate(@projects)

%table.table.table-bordered.table-striped
  %thead
    %tr
      %th= t('simple_form.user.name')
      %th
      %th
      %th

  %tbody
    - @projects.each do |project|
      %tr
        %td= project.name
        - if can? :project, project
          %td= link_to 'Show', project
        - if can? :edit_project, project
          %td= link_to 'Edit', edit_project_path(project)
        - if can? :project, project, :destroy
          %td= link_to 'Destroy', project, :confirm => 'Are you sure?', :method => :delete

= paginate(@projects)
