.page-header
  = link_to project_locales_path, :class => 'btn' do
    %i.icon-list-alt
    = t('simple_form.back')
  = link_to edit_project_locale_path(@project_locale), :class => 'btn btn-primary' do
    %i.icon-pencil.icon-white
    = t('simple_form.edit')
  %h1= t('.listing')

%dl
  %dt= t('.name')
  %dd= @project_locale.locale.try(:name)
  %dd= @project_locale.project.try(:name)
