.page-header
  = link_to new_project_locale_path, :class => 'btn btn-primary' do
    %i.icon-plus.icon-white
    = t '.new'
  %h1= t '.listing'

= paginate(@project_locales)

%table.table.table-bordered.table-striped
  %thead
    %tr
      %th= t('.project')
      %th= t('.name')
      %th
      %th
      %th

  %tbody
    - @project_locales.each do |project_locale|
      %tr
        %td= project_locale.project.try(:name)
        %td= project_locale.locale.try(:name)
        %td= link_to 'Show', project_locale
        %td= link_to 'Edit', edit_project_locale_path(project_locale)
        %td= link_to 'Destroy', project_locale, :confirm => 'Are you sure?', :method => :delete

= paginate(@project_locales)
